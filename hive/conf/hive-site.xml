<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://tanhung-master:9000</value>
    </property>

    <!-- Đường dẫn HDFS nơi Hive lưu trữ dữ liệu của các bảng (warehouse directory). -->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>/user/hive/warehouse</value>
    </property>

    <!-- Thư mục tạm trên HDFS để lưu trữ dữ liệu trung gian khi chạy các tác vụ Hive -->
    <property>
        <name>hive.exec.scratchdir</name>
        <value>/user/hive/scratchdir</value>
    </property>

    <!-- Chỉ định driver JDBC mà Hive sử dụng để kết nối với Metastore database. -->
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>com.mysql.cj.jdbc.Driver</value>
    </property>

    <!-- URL kết nối JDBC đến Metastore database. -->
    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:mysql://mariadb:3306/hive_metastore?createDatabaseIfNotExist=true</value>
    </property>

    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>admin</value>
    </property>
    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value>admin</value>
    </property>

</configuration>
